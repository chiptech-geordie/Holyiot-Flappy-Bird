<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChristmasCodingChallange.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="60,0"
            TranslationY="100"
            Spacing="50">
            <Image
                Source="chiptech.jpg"
                HeightRequest="185"
                Aspect="AspectFit" />

            <Label
                Text="Christmas Coding Challenge"
                Style="{StaticResource Headline}" />

            <Button
                x:Name="PlayButton"
                Text="Play Game" 
                Clicked="PlayButtonEvent"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
